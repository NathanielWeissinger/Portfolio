<UserControl x:Class="MasterServer.UI.CustomControls.NumberDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MasterServer.UI.CustomControls"
             x:Name="NumberDisplayController"
             mc:Ignorable="d">
    <Border VerticalAlignment="Center"
            Background="#007FFF"
            Margin="0 0 10 0"
            CornerRadius="10">
        <TextBlock Text="{Binding DisplayNumber, ElementName=NumberDisplayController}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Padding="5"/>
    </Border>
</UserControl>
